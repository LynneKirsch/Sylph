<body>

{{#auth}}
    <nav class="light-blue z-depth-0" role="navigation">
        <div class="nav-wrapper center container">
            <ul class="left hide-on-med-and-down">
                <li><a href="{{basepath}}logout">Logout</a></li>
                <li><a href="{{basepath}}admin/users">Users</a></li>
                <li><a href="{{basepath}}admin/pages">Pages</a></li>
            </ul>
        </div>
    </nav>
{{/auth}}
<nav class="grey darken-2 z-depth-0">
