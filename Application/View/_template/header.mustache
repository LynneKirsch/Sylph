    <link href="{{basepath}}public/sass/styles.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="{{basepath}}public/sass/camera.css" type="text/css" rel="stylesheet" media="screen,projection"/>

    <!--  Scripts-->
    <script>var basepath = "{{basepath}}";</script>
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
