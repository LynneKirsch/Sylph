<div class="container main">
    <div class="row">
        <div class="col s12">
            <h5>User Administration</h5>
        </div>
    </div>
    <form method="POST" action="{{global.basepath}}admin/users/update">
        <div class="row">
            <div class="col l4">
                <input class="block" name="username" id="username" title="username" type="text" placeholder="Username">
            </div>
            <div class="col l4">
                <input class="block" name="password" id="password" title="password" type="text" placeholder="Password">
            </div>
            <div class="col l4">
                <button class="btn">Add New</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col s12">
            <h5>Users</h5>
        </div>
    </div>
    {{#data.users}}
        <form method="POST" action="{{global.basepath}}admin/users/update/{{getUserId}}">
            <div class="row">
                <div class="col l4">
                    <input class="block" name="username" id="username" title="username" type="text" value="{{getUsername}}">
                </div>
                <div class="col l4">
                    <input class="block" name="password" id="password" title="password" type="text" placeholder="Password">
                </div>
                <div class="col l4">
                    <button class="btn btn-block">Update</button>
                </div>
            </div>
        </form>
    {{/data.users}}
</div>